{% if filteringForm is defined %}
    <div class="row">
        {% include 'admin/_common/_create_button.html.twig' %}
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseFilterMenu" aria-expanded="false" aria-controls="collapseFilterMenu">
            Filter
        </button>
    </div>

    <div class="collapse col-lg-4 col-md-6 col-sm-12" id="collapseFilterMenu">
        {{ form_start(filteringForm) }}
        <div class="box app-box">
            <div class="box-header with-border hide-empty">{% block form_header -%}{%- endblock form_header %}</div>

            <div class="box-body">
                {{ form_errors(filteringForm) }}
                {{ form_rest(filteringForm) }}
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
        {{ form_end(filteringForm) }}
    </div>
{% endif %}