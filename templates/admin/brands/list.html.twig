{% extends 'admin/base_admin.html.twig' %}

{% block title %} Rentavehicle - Admin - Brands {% endblock %}

{% block body %}
    {% include 'admin/_common/_filtering_form_view.html.twig' with {'filteringForm': brandsFilterForm, 'createUrl' : path('admin_brands_create')} %}

    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title pull-left">Brands</h4>
            <h5 class="cart-title pull-right">Total count: {{ pager.nbResults }}</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                        <th>
                            ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Created at
                        </th>
                        <th>
                            Updated at
                        </th>
                    </thead>
                    <tbody>
                        {% for brand in brands %}
                            <tr>
                                <td>
                                    {{ brand.id }}
                                </td>
                                <td>
                                    {{ brand.name }}
                                </td>
                                <td>
                                    {{ brand.createdAt.format('d.m.Y. H:i:s') }}
                                </td>
                                <td>
                                    {{ brand.updatedAt.format('d.m.Y. H:i:s')}}
                                </td>
                                <td>
                                    <a href="{{ path('admin_brands_update', {'id': brand.id}) }}"><i class="material-icons">edit</i></a>
                                </td>
                                <td>
                                    <a href="#" data-href="{{ path('admin_brands_delete', {'id': brand.id}) }}" data-toggle="modal" data-target="#confirm-delete"><i class="material-icons">close</i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% include 'admin/_common/_pager.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}