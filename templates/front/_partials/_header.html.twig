<header class="site-navbar site-navbar-target" role="banner">

    <div class="container">
        <div class="row align-items-center position-relative">

            <div class="col-3 ">
                <div class="site-logo">
                    <a href="{{ path('index') }}">Rentavehicle</a>
                </div>
            </div>

            <div class="col-9  text-right">
                <span class="d-inline-block d-lg-none">
                    <a href="#" class="text-white site-menu-toggle js-menu-toggle py-5 text-white">
                        <span class="icon-menu h3 text-white"></span>
                    </a>
                </span>

                <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                    <ul class="site-menu main-menu js-clone-nav ml-auto ">
                        <li><a href="{{ path('index') }}" class="nav-link">Home</a></li>
                        <li><a href="{{ path('salon_list') }}" class="nav-link">Salons</a></li>
                        <li><a href="{{ path('cars_list') }}" class="nav-link">Cars</a></li>
                        {% if not is_granted('ROLE_USER') %}
                            <li><a href="{{ path('login') }}" class="nav-link">Sign In</a></li>
                        {% else %}
                            <li><a href="{{ path('profile_update', {'id': app.user.id}) }}" class="nav-link">Profile</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('admin_default') }}" class="nav-link">Admin</a></li>
                            {% endif%}
                            <li><a href="{{ path('logout') }}" class="nav-link">Logout</a></li>
                        {% endif %}
                        <li><a href="{{ path('contact') }}" class="nav-link">Contact</a></li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>

</header>